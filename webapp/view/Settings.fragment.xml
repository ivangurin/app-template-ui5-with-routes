<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog 
        id="settingsDialog" 
        title="Settings"
        class="sapUiResponsiveMargin">
    
        <content>
    
            <Label 
                text="Token" 
                labelFor="token" 
                class="sapUiTinyMarginBegin"/>
    
            <Input 
                id="token"
                value = "{settings>/token}" 
                required="true" 
                width="10rem"
                valueLiveUpdate="true" 
                class="sapUiTinyMarginBegin"/>

        </content>
    
        <beginButton>
    
            <Button    
                text="Close" 
                press="onClose"/>
    
        </beginButton>
    
    </Dialog>

</core:FragmentDefinition>